<h1>Tat ca don hang</h1>

<table border="1">
  <thead>
  <tr>
    <th>So DT</th>
    <th>Ten</th>
    <th>Mã sp</th>
    <th>Tên sp</th>
    <th>Facebook</th>
    <th>Dia chi</th>
    <th>So Luong</th>
    <th>Gia</th>
    <th>Huong dan cua khach</th>
    <th colspan="3">Quan li</th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
      <tr>
        <td><%= order.phone %></td>
        <td><%= order.name %></td>
        <td><%= order.product_id %></td>
        <td><%= order.product_title %></td>
        <td><%= order.facebook %></td>
        <td><%= order.address %></td>
        <td><%= order.quantity %></td>
        <td><%= order.price %></td>
        <td><%= order.instruction %></td>
        <td><%= link_to 'Show', OrdersController::Home_Page+order.id.to_s %></td>
        <td><%= link_to 'Edit', OrdersController::Home_Page+order.id.to_s+'/edit/', method: :put %></td>
        <td><%= link_to 'Destroy', OrdersController::Home_Page+order.id.to_s+'/x/', method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

