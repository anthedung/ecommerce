<h1>Listing products</h1>

<table border="1">
  <thead>
  <tr>
    <th>Tên</th>
    <th>Miêu tả</th>
    <th>Thể loại</th>
    <th>link ảnh</th>
    <th>Số lượng</th>
    <th>Giá</th>
    <th>Đơn vị</th>
    <th>Mới?</th>
    <th>Số like</th>
    <th colspan="3">Quản lí</th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.category %></td>
        <td><%= product.image_url %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= product.unit %></td>
        <td><%= product.isNew %></td>
        <td><%= product.likeNo %></td>
        <td><%= link_to 'Xem', ProductsController::Home_Page+product.id.to_s %></td>
        <td><%= link_to 'Sửa', ProductsController::Home_Page+product.id.to_s+'/edit', method: :put %></td>
        <td><%= link_to 'Xoa (can than!)', ProductsController::Home_Page+product.id.to_s+'/x', method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sản phẩm mới', ProductsController::Home_Page+'new/' %>
